{
  "configurations": [
    {
      "name": "Linux",
      "compilerPath": "/usr/bin/g++",
      "cStandard": "c11",
      "cppStandard": "c++20",
      "intelliSenseMode": "linux-gcc-x64",

      // ✨ Usa compile_commands.json generado por CMake
      "compileCommands": "${workspaceFolder}/build/compile_commands.json",

      // Opcional: rutas adicionales si necesitas
      "includePath": [
        "${workspaceFolder}/include/**",
        "${workspaceFolder}/src/**"
      ],

      // Deja que CMake Tools inyecte defines, flags y demás
      "configurationProvider": "ms-vscode.cmake-tools"
    }
  ],
  "version": 4
}
